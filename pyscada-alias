alias ppip='sudo -u pyscada -E env PATH=${PATH} pip $*'
alias psource='source /home/pyscada/.venv/bin/activate'
alias grestart='sudo -b systemctl restart gunicorn'
alias prestart='sudo -b systemctl restart pyscada'
alias pgrestart='sudo -b systemctl restart gunicorn pyscada'
alias gstop='sudo -b systemctl stop gunicorn'
alias pstop='sudo -b systemctl stop pyscada'
alias pgstop='sudo -b systemctl stop gunicorn pyscada'
alias gstatus='sudo systemctl status gunicorn'
alias pstatus='sudo systemctl status pyscada'
alias pgstatus='sudo systemctl status gunicorn pyscada'
alias pstatic='sudo -u pyscada -E env PATH=${PATH} python /var/www/pyscada/PyScadaServer/manage.py collectstatic --no-input --clear'
alias pshell='sudo -u pyscada -E env PATH=${PATH} python /var/www/pyscada/PyScadaServer/manage.py shell'
alias pmigrate='sudo -u pyscada -E env PATH=${PATH} python /var/www/pyscada/PyScadaServer/manage.py migrate'
alias pmakemigrations='python /var/www/pyscada/PyScadaServer/manage.py makemigrations'
alias pshowmigrations='sudo -u pyscada -E env PATH=${PATH} python /var/www/pyscada/PyScadaServer/manage.py showmigrations'
alias psettings='sudo -u pyscada nano /var/www/pyscada/PyScadaServer/PyScadaServer/settings.py'
alias purls='sudo -u pyscada nano /var/www/pyscada/PyScadaServer/PyScadaServer/urls.py'
alias plog='tail -fn1000 /var/log/pyscada/pyscada_debug.log'
